<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/collectorLinearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/main_layout_bg"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/paddedLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgPlay"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/play_pause_bg"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_play_arrow_white_24dp" />

        <ProgressBar
            android:id="@+id/pb_play"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgPause"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/play_pause_bg"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_pause_white_24dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/containerLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:padding="1dp"
                android:text="00:00:00 / 00:00:00"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp" />

            <tech.hombre.bluetoothchatter.ui.widget.voiceplayerview.PlayerVisualizerSeekbar
                android:id="@+id/seekBarV"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgShare"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/play_pause_bg"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_share_white_24dp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>